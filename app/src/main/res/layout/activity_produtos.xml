<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Produtos">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="120dp">

        <LinearLayout
            android:id="@+id/lineartop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/original"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp">

                <TextView
                    android:id="@+id/mussarela"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="Mussarela" />

                <Button
                    android:id="@+id/soma"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:onClick="mudaValorMussarelaSS"
                    android:text="+" />

                <TextView
                    android:id="@+id/qtdM"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:text="0" />

                <Button
                    android:id="@+id/subtracao"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:onClick="mudaValorMussarelaS"
                    android:text="-" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/original2"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp">

                <TextView
                    android:id="@+id/leite"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="Leite Integral" />

                <Button
                    android:id="@+id/soma2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:text="+" />

                <TextView
                    android:id="@+id/qtdleit"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:text="0" />

                <Button
                    android:id="@+id/subtracao2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/original3"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp">

                <TextView
                    android:id="@+id/queijo"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="Queijo Prato" />

                <Button
                    android:id="@+id/soma3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:text="+" />

                <TextView
                    android:id="@+id/qtdqueijo"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:text="0" />

                <Button
                    android:id="@+id/subtracao3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="enviar"
        android:text="Enviar Compra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>